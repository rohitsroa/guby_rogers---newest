<%- include('../_layouts/adminheader') %>
<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1">

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/adminstyle.css"/>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="https://cdn.ckeditor.com/4.6.2/standard-all/ckeditor.js"></script>
<script src="/js/main1.js"></script>
<style>
    table {
      width:100%;
    }
    table, th, td {
      border: 1px solid black;
      border-collapse: collapse;
    }
    th, td {
      padding: 15px;
      text-align: left;
    }
    #t01 tr:nth-child(even) {
      background-color: #eee;
    }
    #t01 tr:nth-child(odd) {
     background-color: #fff;
    }
    #t01 th {
      background-color: black;
      color: white;
    }
    </style>

    <h2 class="page-title">Customers</h2>
<table id="t01">

    <thead>
        <tr class="home">
            <th>CustomerId</th>
            <th>Handled</th>
            <th>Date & Time</th>
            <th>Package Name</th>
            <th>Customer Name</th>
            <th>Customer Email</th>
            <th>Customer Phone no.</th>
            <th>Customer Message</th>
            <th>Edit Status</th>
            <th>Delete </th>
        </tr>
    </thead>
    <tbody>
        <% customer.forEach(function(customer){ %>
            <tr id="id_<%= customer._id %>" class="<%= customer._id %>">
                <td><%= customer.customerid %></td>
                <td><%= customer.handled %></td>
                <td><%= customer.date %></td>
                <td><%= customer.packagename %></td>
                <td><%= customer.name %></td>
                <td><%= customer.email %></td>
                <td><%= customer.phone %></td>
                <td><%= customer.message %></td>
                <td><a href="/admin/customers/edit-status/<%= customer._id %>">Edit</a></td>
                <td><a class="confirmDeletion" href="/admin/customers/delete-customer/<%= customer._id %>">Delete</a></td>
            </tr>
        <% }); %>
    </tbody>
</table>
<nav aria-label="Page navigation example">
    <ul class="pagination">
    <li class="page-item"><a class="page-link" href="/admin/customers/1-<%=limit%>">First</a></li>
    <li class="page-item"><%
    if(page!=1){ 
    var a=parseInt(page)-1;
    %>
    <a class="page-link" href="/admin/customers/<%=a%>-<%=limit%>">Previous</a>
    <%
    }
    %></li>
    <!-- <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li> -->
    <li class="page-item">
    <%if(pages!=page){ 
    page=parseInt(page)+1;
    %>
    <a class="page-link" href="/admin/customers/<%=page%>-<%=limit%>">Next</a>
    <%
    }
    %>
    </li>
    <li class="page-item"><a class="page-link" href="/admin/customers/<%=pages%>-<%=limit%>">Last</a></li>
    </ul>
    </nav>
    Total: <%=total%> 
 
